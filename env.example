# GEMINI_API_KEY: https://aistudio.google.com/app/apikey
# OPENAI_API_KEY: https://platform.openai.com/api-keys
# PRIVATE_KEY: use a wallet tool or eth_account in Python or Metamask any Web3 Wallets
# PINATA_JWT: https://app.pinata.cloud/developers/api-keys

NODE_ENV=development
LOG_LEVEL=INFO
APP_NAME=HyperAgent
APP_VERSION=1.0.0
DEBUG=false

DATABASE_URL=postgresql://hyperagent_user:your_password@localhost:5432/hyperagent_db
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key

REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

HYPERION_TESTNET_RPC=https://hyperion-testnet.metisdevops.link
HYPERION_TESTNET_CHAIN_ID=133717
HYPERION_MAINNET_RPC=https://hyperion.metisdevops.link
HYPERION_MAINNET_CHAIN_ID=133718

MANTLE_TESTNET_RPC=https://rpc.sepolia.mantle.xyz
MANTLE_TESTNET_CHAIN_ID=5003
MANTLE_MAINNET_RPC=https://rpc.mantle.xyz
MANTLE_MAINNET_CHAIN_ID=5000

EIGENDA_DISPERSER_URL=https://disperser.eigenda.xyz
EIGENDA_USE_AUTHENTICATED=true

# ALITH_AGENT_ID=

USE_MANTLE_SDK=false

PRIVATE_KEY=your_private_key_hex_without_0x_prefix
PUBLIC_ADDRESS=your_public_address_0x_format

PINATA_JWT=your_pinata_jwt_token
PINATA_GATEWAY=https://gateway.pinata.cloud
ENABLE_IPFS_UPLOAD=true
IPFS_VERIFY_INTEGRITY=true

GEMINI_MODEL=gemini-2.5-flash
GEMINI_THINKING_BUDGET=
OPENAI_MODEL=gpt-4o

TEMPLATE_CACHE_TTL=3600
TEMPLATE_BATCH_SIZE=10

ENABLE_FOUNDRY=false
TEST_FRAMEWORK_AUTO_DETECT=true

ENABLE_DEPLOYMENT_VALIDATION=true
MIN_WALLET_BALANCE_ETH=0.001

API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FORMAT=json
LOG_FILE=logs/hyperagent.log

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

ENABLE_WEBSOCKET=true
ENABLE_RATE_LIMITING=false
ENABLE_AUTHENTICATION=false

JWT_SECRET_KEY=change-me-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
API_KEYS=

SKIP_AUDIT=false
SKIP_TESTING=false
SKIP_DEPLOYMENT=false

MAX_RETRIES=3
RETRY_BACKOFF_BASE=2