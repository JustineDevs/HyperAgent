{
  "dashboard": {
    "title": "HyperAgent - Error Rates & Alerts",
    "tags": ["hyperagent", "errors", "alerts"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Workflow Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(hyperagent_workflows_failed_total[5m])",
            "legendFormat": "Failures/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [0.1],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "last"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "10s",
          "handler": 1,
          "name": "High Workflow Failure Rate",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 2,
        "title": "Agent Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(hyperagent_agents_errors_total[5m])) by (agent)",
            "legendFormat": "{{agent}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "LLM API Errors",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(hyperagent_llm_errors_total{provider=\"gemini\"}[5m])",
            "legendFormat": "Gemini Errors"
          },
          {
            "expr": "rate(hyperagent_llm_errors_total{provider=\"openai\"}[5m])",
            "legendFormat": "OpenAI Errors"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Deployment Failures",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(hyperagent_deployments_total{status=\"failed\"}[5m])",
            "legendFormat": "Failed Deployments/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "System Errors",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(hyperagent_system_errors_total[5m])",
            "legendFormat": "System Errors/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Error Rate by Component",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(rate(hyperagent_workflows_failed_total[5m]))",
            "legendFormat": "Workflows"
          },
          {
            "expr": "sum(rate(hyperagent_agents_errors_total[5m]))",
            "legendFormat": "Agents"
          },
          {
            "expr": "sum(rate(hyperagent_llm_errors_total[5m]))",
            "legendFormat": "LLM"
          },
          {
            "expr": "sum(rate(hyperagent_deployments_total{status=\"failed\"}[5m]))",
            "legendFormat": "Deployments"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ]
  }
}

