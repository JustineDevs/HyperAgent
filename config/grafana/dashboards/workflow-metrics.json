{
  "dashboard": {
    "title": "HyperAgent - Workflow Metrics",
    "tags": ["hyperagent", "workflows"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Workflow Creation Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(hyperagent_workflows_created_total[5m])",
            "legendFormat": "Workflows/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Workflow Completion Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(hyperagent_workflows_completed_total[5m])",
            "legendFormat": "Completed/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Workflow Duration (p95, p99)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, hyperagent_workflows_duration_seconds_bucket)",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, hyperagent_workflows_duration_seconds_bucket)",
            "legendFormat": "p99"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Active Workflows",
        "type": "graph",
        "targets": [
          {
            "expr": "hyperagent_system_active_workflows",
            "legendFormat": "Active"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Workflow Status Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "hyperagent_workflows_created_total",
            "legendFormat": "Created"
          },
          {
            "expr": "hyperagent_workflows_completed_total",
            "legendFormat": "Completed"
          },
          {
            "expr": "hyperagent_workflows_failed_total",
            "legendFormat": "Failed"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Workflow Failure Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(hyperagent_workflows_failed_total[5m])",
            "legendFormat": "Failures/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ]
  }
}

